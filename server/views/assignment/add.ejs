<%- include ../partials/header.ejs %>
<%- include ../partials/nav_bar.ejs %>

<!-- content for add page -->
<main class="min-vh-100">
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <h1><%= title %></h1>
                <form class="form" method="post">
                    <!-- form to fill out to add an assignment -->
                    <div class="form-group">
                        <label for="nameTextField">Assignemnt Name</label>
                        <input type="text" class="form-control"
                            id="nameTextField"
                            placeholder="Enter Assignment Name"
                            name="Name" required>
                    </div>

                    <div class="form-group">
                        <label for="classTextField">Class</label>
                        <input type="text" class="form-control"
                            id="classTextField"
                            placeholder="Enter Class Name"
                            name="Class" required>
                    </div>
                    
                    <!-- make it a date and time-->
                    <div class="form-group">
                        <label for="dueTextField">Due Date</label>
                        <input type="text" class="form-control"
                            id="dueTextField"
                            placeholder="Enter Due Date"
                            name="Due" required>
                    </div>
                    <br>
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i>Submit</button>

                    <a href = "/assignmentList" class="btn btn-warning">
                        <i class="fas fa-undo"></i>Cancel</a><br>
                </form>
            </div>
        </div>
    </div>
</main>
<%- include ../partials/bottom_nav.ejs %>
